<Window x:Class="BindingStudy.MultiBindingDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingStudy"
        mc:Ignorable="d"
        Title="MultiBindingDemo" Height="300" Width="300">
    <Grid>
        <StackPanel Background="LightBlue">
            <TextBox x:Name="txtBox1" Height="23" Margin="5"></TextBox>
            <TextBox x:Name="txtBox2" Height="23" Margin="5"></TextBox>
            <TextBox x:Name="txtBox3" Height="23" Margin="5"></TextBox>
            <TextBox x:Name="txtBox4" Height="23" Margin="5"></TextBox>
            <Button x:Name="button1" Content="Submit" Width="80" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Window>
